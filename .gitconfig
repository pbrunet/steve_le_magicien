[merge]
	tool = unityyamlmerge

[diff]
	tool = unityyamldiff

[mergetool "unityyamlmerge"]
	trustExitCode = false
	cmd = 'C:/Program Files/Unity/Hub/Editor/2021.3.6f1/Editor/Data/Tools/UnityYAMLMerge.exe' merge -p \"$BASE\" \"$REMOTE\" \"$LOCAL\" \"$MERGED\"

[difftool "unityyamldiff"]
	trustExitCode = false
	cmd = 'C:/Program Files/Unity/Hub/Editor/2021.3.6f1/Editor/Data/Tools/UnityYAMLMerge.exe' diff \"$REMOTE\" \"$LOCAL\"
